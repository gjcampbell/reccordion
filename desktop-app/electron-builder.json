{
  "productName": "reccordion",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "extraResources": ["extraResources/**.*"],
  "win": {
    "icon": "dist/assets/icons/icon.png",
    "target": ["portable", "nsis"]
  },
  "portable": {
    "artifactName": "reccordion-portable.exe"
  },
  "nsis": {
    "artifactName": "reccordion-installer.exe",
    "perMachine": false
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  }
}
